  "meta": {
    "name": "Lecture Note Rewrite",
    "description": "Rewrite lecture notes to follow the CLAUDE.md style guide",
    "projectDir": "docs/lecture-note",
    "structure": {
      "notes": "docs/lecture-note/",
      "styleGuide": "CLAUDE.md"
    },
    "validators": {
      "render": "cd docs/lecture-note && quarto render",
